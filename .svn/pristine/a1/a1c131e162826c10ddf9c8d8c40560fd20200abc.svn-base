.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-red-packet-dialog {
  width: 70%;
  min-height: 60%;
  flex-direction: column;
  position: fixed;
  top: 20%;
  bottom: 20%;
  z-index: 9999;
  background: #d4533d;
  margin-left: 15%;
  margin-right: 15%;
  border-radius: 16rpx;
}

.red-packet-header {
  width: 100%;
  height: 80%;
  flex-direction: column;
  display: flex;
  justify-content: start;
  align-items: center;
}

.red-userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #f6e0ae;
}

.userinfo-label {
  color: #f6e0ae;
  font-size: 28rpx;
}

.red-blessing {
  font-size: 36rpx;
  color: #f6e0ae;
  margin-top: 32rpx;
  font-weight: 400;
  line-height: 48rpx;
}

.red-packet-dlg-content {
  width: 100%;
  height: 480rpx;
  position: relative;
  z-index: -1;
  overflow: hidden;
}

.red-packet-dlg-content::after {
  content: '';
  width: 100%;
  height: 480rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  border-radius: 0 0 38% 38%;
  background: linear-gradient(160deg, #db5343, #db5343);
}
.red-packet-open{
  width: 100%;
  height: 196rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  z-index: 1;
}
.img-open {
  width: 144rpx;
  height: 144rpx;
 
  bottom: 114rpx;
}

.img-cancel {
  margin-top: 16rpx;
  width: 72rpx;
  height: 72rpx;
  position: absolute;
  top: 0rpx;
  right: 16rpx;
   z-index: 1;
}
