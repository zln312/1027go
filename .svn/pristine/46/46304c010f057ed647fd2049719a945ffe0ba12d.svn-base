.userinfo-avatar {
  width: 196rpx;
  height: 196rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 8rpx rgb(224, 224, 224);
}

.auth-header {
  width: 100%;
  height: 30%;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
}

.authorize-page {
  width: 100%;
  height: 100vh;
  flex-direction: column;
}


.content {
  width: 100%;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom {
  margin: 70rpx 50rpx;
  font-size: 36rpx;
  color: aliceblue;
  background-color: #0091b0;
}
.weui-btn{
  margin: 70rpx 50rpx;
  font-size: 36rpx;
  color: aliceblue;
}
.phone-content {
  width: 90%;
  height: 96rpx;
  border: 1rpx solid rgb(224, 224, 224);
  border-radius: 16rpx;
  flex-direction: row;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 32rpx;
}

.phone-content image {
  width: 64rpx;
  height: 64rpx;
  margin-left: 16rpx;
}
.phone-content input {
  width: 50%;
  padding-left: 16rpx;
}
.weui-btn-phone{
  width: 30%;
  height: 60rpx;
  font-size: 24rpx;
  justify-content: center;
  align-items: center;
  color: rgb(14, 14,14);
}