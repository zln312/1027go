/* pages/optSelection/opt.wxss */
.container_page {
  width: 100%;
  height: 100%;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: whitesmoke;  
}
.divider-line{
  width: 100%;
  height: 1rpx;
  background-color: aliceblue;
}
.business-content{
  width: 100%;
  height: 80vh;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;  
}

.business-footer{
  width: 100%;
  height: 144rpx;
  background-color: white;  
  additive-symbols: row;
  bottom: 0;
  position: fixed;
  display: flex;
    flex-direction: column;
  justify-content: center;
  align-items: center; 
  font-size: 32rpx;
  font-style: normal;
  white-space: pre-wrap;
  color: rgb(14, 14, 14);
}
