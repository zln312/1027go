/* pages/optSelection/opt.wxss */
.container_page {
  width: 100%;
  height: 100%;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;  
}
.divider-line{
  width: 100%;
  height: 1rpx;
  background-color: aliceblue;
}

/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
  additive-symbols: row;
  bottom: 0;
  position: fixed;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
.optimal-content{
   width: 100%;
   height: 100%;
}
.opt-item-content{
  width: 100%;
  height: 114rpx;
  display: flex;
  flex-direction: column;
}
.opt-item {
  width: 100%;
  height: 113rpx;
  display: flex;
  flex-direction: row;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.opt-item  .userinfo-avatar{
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
  position: fixed;
  flex-direction: row;
  margin-left: 16rpx;
  justify-content: flex-start;
  align-items: center;  
}

.opt-item text{
  width: 100%;
  margin-left: 114rpx;
  margin-top: 8rpx;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  white-space: pre-wrap;
  color:rgb(114, 114, 114);
}