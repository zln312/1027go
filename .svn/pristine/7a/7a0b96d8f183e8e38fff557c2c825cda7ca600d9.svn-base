/**index.wxss**/
@import "/templates/cell.wxss";

.container_page {
  width: 100%;
  height: 100vh;
  flex-direction: column;
  overflow: hidden;
  position: absolute;
  background-color: white;
}
.page-header{
  width: 100%;
  height: 15%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
 
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  display: flex;
  background-color: #f7f7f7;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 8rpx rgb(224, 224, 224);
  margin-left: 32rpx;
  margin-right: 16rpx;
  margin-top: 32rpx;
  margin-bottom: 16rpx;
}


.userinfo-nickname {
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
  margin-left: 12rpx;
}
.userInfo-midd{
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;  
}
.userInfo-right{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;  
  margin-right: 32rpx;
}
.userInfo-midd .userInfo-phone{
  font-size: 28rpx;
  font-weight: 400;
  color: #939699;
  margin-left: 12rpx; 
}
.userInfo-right image{
  width: 36rpx;
  height: 36rpx;
}
.page-act{
  width: 96%;
  height: 256rpx;
  margin-left: 2%;
  margin-right: 2%;
  display: flex;
  background:rgba(255,255,255,1);
  box-shadow:0px 8px 16px 0px rgba(0,0,0,0.06);
  border-radius:16rpx;
  background-color: white;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;  
}
.page-act-title{
  width: 100%;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;  
  margin-left: 32rpx;
  margin-top: 8rpx;
}
.page-act-title image{
   width: 48rpx;
   height: 48rpx;
}
.page-act-title text{
  font-weight:800;
  font-size: 28rpx;
  color: #313233;
  margin-left: 16rpx;
}
.divider-line {
  width: 100%;
  min-height: 2rpx;
  background-color: rgb(244, 244, 244);
}
.page-act-content{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.page-act-content .item{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;    
}
.page-act-content .item image{
  width: 96rpx;
  height: 96rpx;
}
.page-act-content .item text{
  font-weight:bold;
  font-size: 24rpx;
  color: #313233;
}
.page-scroll-list{
  width: 100%;
  height: 640rpx;
  position: fixed;
  background-color: rgb(114, 114, 114);
}
.scroll-content {
  width: 100%;
  margin-top: 32rpx;
  white-space:nowrap;
}

.divider-line-p{
  width: 100%;
  height: 2rpx;
  background-color: rgb(244, 244, 244);
}