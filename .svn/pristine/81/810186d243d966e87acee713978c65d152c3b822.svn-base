.userinfo-avatar {
  width: 196rpx;
  height: 196rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 8rpx rgb(224, 224, 224);
}

.auth-header {
  width: 100%;
  height: 30%;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
}

.authorize-page {
  width: 100%;
  height: 100vh;
  flex-direction: column;
}


.content {
  width: 100%;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom {
  margin: 70rpx 50rpx;
  font-size: 36rpx;
  color: aliceblue;
  background-color: #0091b0;
}
