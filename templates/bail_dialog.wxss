
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000; 
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 90%;
  height:40%;
  flex-direction: column;
  position: fixed;
  top: 35%;
  z-index: 9999;
  background: #f9f9f9;
  margin-left: 5%;
  margin-right:5%;
  border-radius: 16rpx;
}

.modal-title {
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  color: rgb(44, 44, 44);
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #dedede;
}

.modal-content {
  width: 100%;
  height: 256rpx;
  flex-direction:row;
  display: flex;
}
modal-content view{
    font-size: 30rpx;
  color: rgb(44, 44, 44);
}
