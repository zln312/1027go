


<view class="bg-F2F4F5 min-height-100vh pd-b-120">

	<view class="container-fluid bg-fff pd-t-40 mg-b-20">
		<view class="row flex-nowrap align-items-start pd-b-40">
			<image class="img-01 flex-shrink-0" src="{{detail.img}}"></image>
			<view class="font-size-28 flex-fill mg-l-20">{{detail.name}}</view>
		</view>
	</view>


  <form bindsubmit="bindFormSubmit">
  <view class="container-fluid bg-fff pd-t-40 pd-b-24">
		<view class="row flex-nowrap align-items-center height-88 mg-b-16 font-size-28 color-313233">
			<view class=" flex-shrink-0 text-align-last-justify" style="width:112rpx">退款说明</view>
		</view>
		<view class="position-relative mg-t-24 mg-b-16 font-size-28 color-313233">
			<textarea class="textarea_style" value="{{textValue}}" bindinput="inputBind" name='textarea' placeholder="请详细填写退款说明，至少5个字" placeholder-style="color:'#939699'" maxlength="100" />
			<view class="word-count color-939699">{{textLength}}/100</view>
		</view>
	</view>

	
	<view class="container-fluid row flex-nowrap align-items-center justify-content-between add-address pd-t-20 pd-b-20">
		<button form-type="submit" class=" flex-fill font-size-28 but-F6B352">提交</button>
	</view>
</form>

</view>


