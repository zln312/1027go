.container_page {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background-color: whitesmoke;
}

.deposit-content {
  width: 90%;
  height: 55vh;
  display: flex;
  margin: 32rpx;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background-color: white;
}

.weui-cell__bd {
  font-weight: bold;
  font-size: 28rpx;
  color: rgb(64, 64, 64);
}

.deposit-content radio-group {
  width: 90%;
  margin: 16rpx;
}

.credit-card-content {
  width: 86%;
  height: 114rpx;
  margin-left: 42rpx;
  margin-right: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: whitesmoke;
}
.credit-card-add {
   width: 86%;
  height: 114rpx;
  margin-left: 42rpx;
  margin-right: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: whitesmoke;
}
.credit-card-type {
  width: 86%;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.credit-card-name {
  font-size: 28rpx;
  color: #596c96;
  white-space: pre-wrap;
  font-weight: bold;
  margin-top: 8rpx;
  margin-left: 6rpx;
}

.credit-card-type image {
  width: 54rpx;
  height: 54rpx;
  margin-left: 12rpx;
}

.credit-card-label {
  font-size: 24rpx;
  margin-left: 64rpx;
  white-space: pre-wrap;
  color: rgb(114, 114, 114);
}

.withdrawal-amount {
  width: 86%;
  margin-top: 16rpx;
  margin-left: 42rpx;
  margin-right: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

withdrawal-amount-title {
  font-weight: bold;
  font-size: 28rpx;
  color: rgb(64, 64, 64);
}

.withdrawal-amount-ipt {
  width: 86%;
  height: 96rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.withdrawal-amount-ipt image {
  width: 64rpx;
  height: 64rpx;
}
.withdrawal-amount-ipt input {
  font-size: 36rpx;
  margin-left: 16rpx;
  color: rgb(64, 64, 64);
}
.withdrawal-amount-line {
  width: 86%;
  height: 0.1rpx;
  background-color: rgb(224, 224, 224);
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 42rpx;
  margin-right: 16rpx;
}

.withdrawal-amount-text {
  width: 86%;
  height: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 12rpx;
}
.withdrawal-amount-text .hint{
  font-size: 24rpx;
  margin-left: 42rpx;
  color: rgb(196, 196, 196);
}
.withdrawal-amount-text .amountBtn{
  font-size: 24rpx;
  margin-left: 12rpx;
  color: #596c96;
  font-weight: bold;
}
.weui-btn {
  width: 86%;
}