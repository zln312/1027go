/* pages/optSelection/opt.wxss */

.container_page {
  width: 100%;
  height: 100%;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: whitesmoke;
}

/*  加载更多   */

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
  additive-symbols: row;
  bottom: 0;
  position: fixed;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.skill-item-header {
  width: 100%;
  height: 54rpx;
  flex-direction: row;
  display: flex;
  margin-top: 4rpx;
  justify-content: flex-start;
  align-items: center;
}

.skill-item-header .skill-logo {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.skill-item-header .skill-logo image {
  width: 36rpx;
  height: 36rpx;
}

.skill-item-header .good-title {
  width: 80%;
  height: 100%;
  font-size: 28rpx;
  color: rgb(14, 14, 14);
  font-weight: bold;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.skill-item-header .skill-state {
  width: 20%;
  height: 100%;
  font-size: 28rpx;
  color: rgb(96, 96, 96);
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 16rpx;
  margin-left: 16rpx;
}

.divider-line {
  width: 100%;
  height: 2rpx;
  background-color: rgb(244, 244, 244);
}

.opt-item-content {
  width: 95%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  display: flex;
  margin: 16rpx;
  background-color: white;
  border-radius: 24rpx;
  border: 1px solid rgb(244, 244, 244);
}

.optimal-content {
  width: 100%;
  height: 100vh;
}

.collage-dlg-goods {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: row;
}

.collage-dlg-goods-img {
  width: 30%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.collage-dlg-goods-img image {
  width: 90%;
  height: 144rpx;
  margin-top: 8rpx;
  margin-left: 8rpx;
  border: 1rpx solid #e3f2fd;
}

.collage-dlg-goods-text {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;  
}

.collage-dlg-goods-text .goods-name {
  font-size: 28rpx;
  font-weight: bold;
  color: black;
  flex-wrap: nowrap;
}

.collage-dlg-goods-text .goods-prices {
  font-size: 28rpx;
  font-weight: normal;
  color: rgb(164, 164, 164);
  flex-wrap: nowrap;
}

.collage-dlg-goods-text .goods-quotas {
  font-size: 28rpx;
  font-weight: normal;
  color: rgb(164, 164, 164);
  flex-wrap: nowrap;
}
.divider-line-dashed {
  width: 90%;
  border: 1rpx dashed #e3f2fd;
   margin-top: 12rpx;
}
.collage-copies-btn-ly{
  width: 100%;
  height: 96rpx;
  display: flex;
  margin-top: 12rpx;
  margin-bottom: 12rpx;
  justify-content:flex-end;
  align-items: center;
  flex-direction:row; 
}

.collage-copies-btn{
  width: 50%;
  height: 100%;
  display: flex;
  justify-content:center;
  align-items: center;
  flex-direction:row;
}

.collage-copies-btn .weui-btn{
  font-size: 32rpx;
  letter-spacing: 2rpx;
  color: white;
  flex-wrap: nowrap;
  background-color: #F44336; 
}
