.advert-page {
  width: 100%;
  height: 100%;
  flex-direction: column;
  position: absolute;
  background: linear-gradient(white, white, white, white, white);
  /* background-color: black ; */
}

.auth-header {
  width: 100%;
  height: 20%;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userinfo-avatar {
  width: 164rpx;
  height: 164rpx;
  background-color: #E3F2FD;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 8rpx rgb(224, 224, 224);
}

.content {
  width: 100%;
  height: 100%;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;  
  background-color: #fff;
}
.video-content {
  width: 100%;
  height: 50%;
}
.content image {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.advert-footer {
  width: 100%;
  height: 20%;
  additive-symbols: row;
  bottom: 0;
  position: fixed;
  flex-direction: column;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}


@font-face {
  font-family: 'webfont';
  font-display: swap;
  src: url('//at.alicdn.com/t/webfont_oi86ynqrt2m.eot'); /* IE9*/
  src: url('//at.alicdn.com/t/webfont_oi86ynqrt2m.eot?#iefix') format('embedded-opentype'),
         /* IE6-IE8 */ url('//at.alicdn.com/t/webfont_oi86ynqrt2m.woff2') format('woff2'),
         url('//at.alicdn.com/t/webfont_oi86ynqrt2m.woff') format('woff'),
         /* chrome、firefox */ url('//at.alicdn.com/t/webfont_oi86ynqrt2m.ttf') format('truetype'),
         /* chrome、firefox、opera、Safari,
         Android,
         iOS 4.2+*/ url('//at.alicdn.com/t/webfont_oi86ynqrt2m.svg#Alibaba-PuHuiTi-Bold') format('svg'); /* iOS 4.1- */
}

.web-font {
  font-family: "webfont" !important;
  font-size: 42rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
  color: #00695c;
  margin-bottom: 16rpx;
}
.bottom {
  width: 30%;
  height: 72rpx;
  border-radius: 16rpx;
  font-size: 36rpx;
  color: #00695c;
  background-color: aliceblue;
  border: 1px solid rgba(0, 145, 176, 0.6);
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom:36rpx;  
}